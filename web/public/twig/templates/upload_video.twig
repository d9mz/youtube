{% extends "base.twig" %}

{% block page %}
    {# page metadata #}

    {% set page = page | merge({
        "title"       : "YouTube - Upload Video",
        "description" : "Broadcast yourself"
    }) %}    

    {{ parent() }}
{% endblock %}

{%- block site_content -%}
    <div class="clearfix">
        <div class="section bold sign-up">
            Upload Video to YouTube
        </div>
        <div class="outer-box" style="width: 500px;">
            <div class="inner-box">
                <form action="/request/upload_video" method="POST" enctype="multipart/form-data" autocorrect="off">
                    video title>::::: <input class="" name="youtube-title" placeholder="Title" type="text"><br>
                    description>::::: <textarea name="youtube-description" placeholder="Description"></textarea><br>
                    tags>::::: <input class="" name="youtube-tags" placeholder="title" type="text"><br>
                    category>:::::  <select name="youtube-category">
                                    {% for category in categories %}
                                        <option value="{{ category }}">{{ category }}</option>
                                    {% endfor %}
                                </select><br><br>
                    FILE UPLOAD: <input class="" name="youtube-video" placeholder="" type="file" accept="video/mp4,video/x-m4v,video/*"><br>
                    <input class="submit" type="submit" value="Upload">
                </form>
            </div>
        </div>
    </div>
{% endblock %}