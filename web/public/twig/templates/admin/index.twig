{% extends "base.twig" %}

{% block page %}
    {# page metadata #}

    {% set page = page | merge({
        "title"       : "UTue - Video Manager",
        "description" : "Broadcast yourself"
    }) %}    

    {{ parent() }}
{% endblock %}

{%- block head -%}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{%- block site_content -%}
	<style>
		.seperator {
		    margin: 0 7px;
		}
	</style>
	<div class="clearfix settings-page">
		<h1>Moderation Panel</h1>
		<a href="/my/video_manager">Videos</a> <span class="seperator"></span>
		<a href="/my/insight">Insight</a> <span class="seperator"></span>
		<a href="/inbox/">Messages</a> <span class="seperator"></span>
		<a href="/account">Settings</a>
		<hr>
	</div>
    <div class="clearfix settings-page">
        <div class="top-left">
            <br>
            <ul class="side-list">
                <li class="active"><a href="/admin/">Referrals</a></li>
                <li class=""><a href="/admin/ban">Ban Hammer</a></li>
                <li class=""><a href="/admin/delete">Remove Items</a></li>
                <li class=""><a href="/admin/comments">Comments</a></li>
                <li class="height-expander">&nbsp;</li>
            </ul>
        </div>
        <div class="top-right">
            <h1 class="video-manager">Generated Keys</h1>
            <div style="padding:10px;">
                {% for key in referrals %}
                    {% if key.id is defined %}
                        <div class="black">
                            <span class="black inline-block">
                                {% if key.key_usedby == "" %}
                                    <span style="color:green">
                                        (not used)
                                    </span>
                                {% else %}
                                    <a href="/user/{{ key.key_usedby }}">{{ key.key_usedby }}</a>
                                {% endif %}
                                <br>
                                <span class="small" style="color:#666;">
                                    {{ key.key_created|timeago() }}, generated by {{ key.key_from }}
                                </span>
                            </span>
                            <span class="inline-block right top">
                                {{ key.key_code }}
                            </span>
                        </div>
                        <hr class="dotted-under"><br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}